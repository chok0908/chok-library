{
    "name": "vue-library",
    "version": "0.1.0",
    "private": true,
    "scripts": {
        "serve": "vue-cli-service serve",
        "build": "vue-cli-service build",
        "lint": "vue-cli-service lint",
        "build:lib": "rollup -c",
        "build:vlib": "vue-cli-service build --target lib --name mylib src/lib.ts",
        "build:html": "vue-cli-service build --target lib --formats umd-min --no-clean --dest dist/test.html src/main.ts"
    },
    "dependencies": {
        "core-js": "^3.8.3",
        "register-service-worker": "^1.7.2",
        "vue": "^3.2.13",
        "vue-router": "^4.0.3"
    },
    "devDependencies": {
        "@rollup/plugin-babel": "^6.0.3",
        "@rollup/plugin-commonjs": "^24.0.1",
        "@rollup/plugin-image": "^3.0.2",
        "@rollup/plugin-node-resolve": "^15.0.1",
        "@typescript-eslint/eslint-plugin": "^5.4.0",
        "@typescript-eslint/parser": "^5.4.0",
        "@vue/cli-plugin-babel": "~5.0.0",
        "@vue/cli-plugin-eslint": "~5.0.0",
        "@vue/cli-plugin-pwa": "~5.0.0",
        "@vue/cli-plugin-router": "~5.0.0",
        "@vue/cli-plugin-typescript": "~5.0.0",
        "@vue/cli-service": "~5.0.0",
        "@vue/eslint-config-typescript": "^9.1.0",
        "autoprefixer": "^10.4.14",
        "eslint": "^7.32.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-prettier": "^4.0.0",
        "eslint-plugin-vue": "^8.0.3",
        "postcss": "^8.4.21",
        "postcss-selector-namespace": "^3.0.1",
        "prettier": "^2.4.1",
        "rollup-plugin-postcss": "^4.0.2",
        "rollup-plugin-scss": "^4.0.0",
        "rollup-plugin-terser": "^7.0.2",
        "rollup-plugin-url": "^3.0.1",
        "rollup-plugin-vue": "^6.0.0",
        "sass": "^1.32.7",
        "sass-loader": "^12.0.0",
        "tailwindcss": "^3.3.1",
        "typescript": "~4.5.5",
        "vue-cli-plugin-component": "~1.12.2"
    },
    "eslintConfig": {
        "root": true,
        "env": {
            "node": true
        },
        "extends": [
            "plugin:vue/vue3-essential",
            "eslint:recommended",
            "@vue/typescript/recommended",
            "plugin:prettier/recommended"
        ],
        "parserOptions": {
            "ecmaVersion": 2020
        },
        "rules": {}
    },
    "browserslist": [
        "> 1%",
        "last 2 versions",
        "not dead",
        "not ie 11"
    ]
}
